{{> navbar}}


<section  class="bg-light py-4 mb-4 cart-banner">
  <div class="container">
    <h3 class="text-center">Shopping cart</h3>
  </div>
</section>


<section>
  <div class="container">


    <div class="row">
      <div class="col-lg-7">

        <!-- -------------------------------- Single Product ------------------------------------- -->
        {{#each data}}
        <div class="row cart-item mt-1 product">
          <div class="col-lg-6">
            <img class="w-100 " src="{{this.thumbnail}}" alt="Third slide" />
          </div>

          <div class="col-lg-6 mt-3 justify-content-center align-self-center">
            <h5 class="text-center name">
              {{this.name}}
            </h5>
            <p class="text-center price">
              {{this.currency}}
              {{this.convertedTotal}}
            </p>
            <div class="text-center">

              <input id="quantity" class="quantity" min="1" name="quantity" value="{{this.qty}}" readonly type="text" />

              <div class="text-center">
                <select disabled class="form-control mt-3" id="sizeOption">
                  <option selected>
                    {{this.itemSize}}
                  </option>
                </select>
              </div>

              <button data-itemId="{{this.id}}" class="mt-3 remove-cart-btn btn btn-danger w-100">
                Remove
                <i class="fa fa-trash-o ml-2" aria-hidden="true"></i>
              </button>

            </div>
          </div>
          <hr>
          {{/each}}
          <!-- -------------------------------- Single Product ------------------------------------- -->


      </div>
    </div>
  </div>
</section>


{{> footer}}
