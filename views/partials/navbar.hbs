<div
  class="modal fade"
  id="loginModal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog mt-5" role="document">
    <div class="modal-content p-md-5 p-3 pt-5">
      <span class="close-button" data-dismiss="modal">&#10005;</span>
      <div class="text-success text-center">
        <small>
          {{ msg }}
        </small>
      </div>
      <h5 class="text-center font-weight-bolder mt-lg-0">
        Log in to your account
      </h5>

      <div class="modal-body">
        <form action="" id="loginUser" method="post" >
          <div class="form-group">
            <input
              type="email"
              class="form-control"
              id="userLogEmail"
              required
              name="userLogEmail"
              placeholder="Enter email"
            />
           
          </div>
          <div class="form-group">
            <input
              required
              type="password"
              class="form-control"
              id="userLogPassword"
              name="password"
              placeholder="Password"
            />
            
            <div id="logInErr" class="text-danger"></div>
          </div>

          <button type="submit" class="btn btn-secondary w-100">Log In</button>
        </form>
        <div class="mt-3 text-center mb-4 mb-lg-0">
          <small
            >Don't have an account ?
            <a
              data-dismiss="modal"
              data-toggle="modal"
              data-target="#signupModal"
              >Sign In</a
            ></small
          >
        </div>
      </div>
    </div>
  </div>
</div>

<div
  class="modal fade"
  id="signupModal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content p-md-5 p-3 pt-5">
      <span class="close-button" data-dismiss="modal">&#10005;</span>

      <h5 class="text-center font-weight-bolder mt-4 mt-lg-0">
        Create your account
      </h5>
      <div class="modal-body">
        <form action="" id="signUpUser" method="post">
          <div class="form-group">
            <input
              required
              type="text"
              class="form-control"
              id="firstName"
              name="firstName"
              placeholder="First Name"
            />
          </div>
          <div class="form-group">
            <input
              required
              type="text"
              class="form-control"
              id="lastName"
              name="lastName"
              placeholder="Last Name"
            />
          </div>
          <div class="form-group">
            <input
              required
              type="email"
              class="form-control"
              id="userEmail"
              name="userEmail"
              placeholder="Enter email"
            />
            <div id="signUpErr" class="text-danger"></div>
          </div>
          <div class="form-group">
            <input
              required
              type="password"
              class="form-control"
              id="userPassword"
              name="userPassword"
              placeholder="Password"
            />
          </div>
          <button type="submit" class="btn btn-secondary w-100">Sign Up</button>
        </form>
        <div class="mt-3 text-center mb-4 mb-lg-0">
          <small
            >Already have an account ?
            <a
              data-dismiss="modal"
              data-toggle="modal"
              data-target="#loginModal"
              >Log In</a
            ></small
          >
        </div>
      </div>
    </div>
  </div>
