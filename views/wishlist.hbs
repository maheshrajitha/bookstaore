{{> navbar}}
<section class="bg-light py-4 mb-4 cart-banner">
  <div class="container">
    <h3 class="text-center">My Wishlist</h3>
  </div>
</section>
<section>
  <div class="container">
    <div class="row">
      {{#if data}}
        {{#each data}}
        <div class="col-lg-3">
          <div class="wishlist-item my-3">
            <div class="p-1 m-1">
              <a href="/item/get/{{this.id}}" class="text-decoration-none">
                <img
                  class="cat-img w-100"
                  src="{{this.thumbnail}}"
                  alt="First slide"
                />
              </a>
              <div class="mt-2">
                <a href="/item/get/{{this.id}}" class="text-decoration-none">
                  <p class="text-center m-0 p-0 wishlist-item-name">
                   {{this.name}}
                  </p>
                </a>
                <p class="price text-center wishlist-item-price">${{this.price}}</p>
              </div>
              <button class="btn btn-secondary w-100" onclick="delFromWishlist('{{this.id}}')">Remove</button>
            </div>
          </div>
        </div>
        {{/each}}
      {{else}}
      <div class="col-12 text-center py-4">
        <h6 class="text-center text-uppercase text-info">Your Wishlist is empty !</h6>
      </div>
      {{/if}}
    </div>
  </div>
</section>
{{> footer}}
